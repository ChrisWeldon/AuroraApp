<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/aurora1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.evanscmssm.auroranotifyer.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="myHandler"
        android:id="@+id/button"
        android:onClick="myHandler"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mProb"
        android:layout_marginTop="38dp"
        android:minHeight="100dp"
        android:maxWidth="300dp"
        android:textColor="#42e5f4"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mLat"
        android:minHeight="100dp"
        android:maxWidth="300dp"
        android:textColor="#42e5f4"
        android:textSize="30dp"
        android:layout_below="@+id/mProb"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mLon"
        android:minHeight="60dp"
        android:maxWidth="300dp"
        android:textColor="#42e5f4"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/mLat"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
